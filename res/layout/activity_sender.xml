<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Sender" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btFall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Send fall notification" />

    <Button
        android:id="@+id/btAssist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btFall"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Send assistance notification" />

    <Button
        android:id="@+id/btGpsFall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btAssist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Send GPS-Fall notification" />

    <Button
        android:id="@+id/btGpsAssist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btGpsFall"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="send GPS-assistance notification" />

</RelativeLayout>